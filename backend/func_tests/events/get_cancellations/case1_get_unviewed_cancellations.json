{
  "description": "Get unviewed event cancellations for user",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "event_cancellations": [
      {
        "id": 1,
        "event_id": 100,
        "event_name": "Cancelled Meeting",
        "cancelled_by_user_id": 1,
        "message": "Cancelado por lluvia"
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/api/v1/events/cancellations?user_id=2"
  },
  "expected": {
    "status_code": 422,
    "body_contains": [
      "Cancelled Meeting",
      "Cancelado por lluvia"
