    "body": {
      "detail": [
        {
          "type": "int_parsing",
          "loc": [
            "path",
            "event_id"
          ],
          "msg": "Input should be a valid integer, unable to parse string as an integer",
          "input": "cancellations",
          "url": "https://errors.pydantic.dev/2.5/v/int_parsing"
        }
      ]
    }
  }
