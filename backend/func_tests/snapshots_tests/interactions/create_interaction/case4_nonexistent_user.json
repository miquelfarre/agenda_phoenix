{
  "description": "Create interaction with nonexistent user returns 404",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Party",
        "start_date": "2025-12-01T18:00:00",
        "timezone": "Europe/Madrid",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/interactions",
    "body": {
      "event_id": 1,
      "user_id": 999,
      "interaction_type": "subscribed"
    }
  },
  "expected": {
    "status_code": 404,
    "body_contains": [
      "User not found"
    ],
    "body": {
      "detail": "User not found"
    }
  }
}
