{
  "name": "Create event without name (should fail)",
  "description": "Intentar crear un evento sin el campo 'name' obligatorio",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Sonia",
        "phone": "+34606014680"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/events",
    "body": {
      "description": "Evento sin nombre",
      "start_date": "2025-11-15T20:00:00",
      "timezone": "Europe/Madrid",
      "event_type": "regular",
      "owner_id": 1
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "detail": "{{contains: 'name'}}"
    }
  },
  "expected": {
    "status_code": 422,
    "body": {
      "detail": [
        {
          "type": "missing",
          "loc": [
            "body",
            "name"
          ],
          "msg": "Field required",
          "input": {
            "description": "Evento sin nombre",
            "start_date": "{{TIMESTAMP}}",
            "timezone": "Europe/Madrid",
            "event_type": "regular",
            "owner_id": "{{ID}}"
          },
          "url": "https://errors.pydantic.dev/2.5/v/missing"
        }
      ]
    }
  }
}
