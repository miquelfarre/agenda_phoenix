{
  "description": "Create duplicate event ban returns 400",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Party",
        "start_date": "2025-12-01T18:00:00",
        "owner_id": 1
      }
    ],
    "event_bans": [
      {
        "id": 1,
        "event_id": 1,
        "user_id": 2,
        "banned_by": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/event_bans",
    "body": {
      "event_id": 1,
      "user_id": 2,
      "banned_by": 1,
      "reason": "Duplicate ban"
    }
  },
  "expected": {
    "status_code": 400,
    "body_contains": [
      "User is already banned from this event"
    ],
    "body": {
      "detail": "User is already banned from this event"
    }
  }
}
