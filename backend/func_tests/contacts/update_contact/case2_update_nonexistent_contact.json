{
  "name": "Update non-existent contact (should fail)",
  "description": "Intentar actualizar un contacto que no existe",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+34900000001"
      }
    ]
  },
  "request": {
    "method": "PUT",
    "endpoint": "/api/v1/contacts/9999?current_user_id=1",
    "body": {
      "owner_id": 1,
      "name": "Contacto Fantasma",
      "phone": "+34600000000"
    }
  },
  "expected": {
    "status_code": 404,
    "body": {
      "detail": "Contact not found"
    }
  }
}
