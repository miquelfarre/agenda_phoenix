{
  "description": "Create user block with nonexistent blocker returns 404",
  "setup": {
    "users": [
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/user_blocks",
    "body": {
      "blocker_user_id": 999,
      "blocked_user_id": 2
    }
  },
  "expected": {
    "status_code": 404,
    "body_contains": [
      "Blocker user not found"
    ],
    "body": {
      "detail": "Blocker user not found"
    }
  }
}
