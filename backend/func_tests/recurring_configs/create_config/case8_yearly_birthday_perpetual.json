{
  "name": "Yearly recurrence - birthday (perpetual)",
  "description": "Cumpleaños que se repite indefinidamente (sin recurrence_end_date)",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Sonia",
        "phone": "+34606014680"
      }
    ],
    "events": [
      {
        "id": 100,
        "name": "Cumpleaños de Sonia",
        "description": "Celebración anual",
        "start_date": "2025-06-14T00:00:00",
        "end_date": "2025-06-14T23:59:00",
        "event_type": "recurring",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/recurring_configs",
    "body": {
      "event_id": 100,
      "recurrence_type": "yearly",
      "schedule": [
        {
          "month": "6",
          "day": "14"
        }
      ],
      "recurrence_end_date": null
    }
  },
  "expected_response": {
    "status_code": 201
  },
  "expected": {
    "status_code": 201,
    "body": {
      "recurrence_type": "yearly",
      "schedule": [
        {
          "month": "6",
          "day": "14"
        }
      ],
      "recurrence_end_date": null,
      "id": "{{ID}}",
      "event_id": "{{ID}}",
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
