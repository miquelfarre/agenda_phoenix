{
  "name": "Yearly recurrence - multiple dates",
  "description": "Evento anual con m\u00faltiples fechas (Navidad y A\u00f1o Nuevo)",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Sonia",
        "phone": "+34606014680"
      }
    ],
    "events": [
      {
        "id": 100,
        "name": "Fiestas de fin de a\u00f1o",
        "description": "Celebraciones anuales",
        "start_date": "2025-12-25T00:00:00",
        "event_type": "recurring",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/recurring_configs",
    "body": {
      "event_id": 100,
      "recurrence_type": "yearly",
      "schedule": [
        {
          "month": "12",
          "day": "25"
        },
        {
          "month": "1",
          "day": "1"
        }
      ],
      "recurrence_end_date": "2035-12-31T23:59:59"
    }
  },
  "expected_response": {
    "status_code": 201
  },
  "expected": {
    "status_code": 201,
    "body": {
      "recurrence_type": "yearly",
      "schedule": [
        {
          "month": "12",
          "day": "25"
        },
        {
          "month": "1",
          "day": "1"
        }
      ],
      "recurrence_end_date": "{{TIMESTAMP}}",
      "id": "{{ID}}",
      "event_id": "{{ID}}",
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
