{
  "description": "Get an existing group successfully",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "groups": [
      {
        "id": 1,
        "name": "Team A",
        "description": "First team",
        "created_by": 1
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/api/v1/groups/1"
  },
  "expected": {
    "status_code": 200,
    "body_contains": [
      "Team A",
      "First team"
    ],
    "body": {
      "name": "Team A",
      "description": "First team",
      "id": "{{ID}}",
      "created_by": 1,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
