{
  "description": "Create a new group successfully",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/groups",
    "body": {
      "name": "New Team",
      "description": "A brand new team",
      "created_by": 1
    }
  },
  "expected": {
    "status_code": 201,
    "body_contains": [
      "New Team",
      "A brand new team"
    ],
    "body": {
      "name": "New Team",
      "description": "A brand new team",
      "id": "{{ID}}",
      "created_by": 1,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
