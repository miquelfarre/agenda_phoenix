{
  "description": "Update an existing group successfully",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "groups": [
      {
        "id": 1,
        "name": "Old Name",
        "description": "Old description",
        "created_by": 1
      }
    ]
  },
  "request": {
    "method": "PUT",
    "endpoint": "/api/v1/groups/1",
    "body": {
      "name": "Updated Name",
      "description": "Updated description"
    },
    "auth_user_id": 1
  },
  "expected": {
    "status_code": 200,
    "body_contains": [
      "Updated Name",
      "Updated description"
    ],
    "body": {
      "name": "Updated Name",
      "description": "Updated description",
      "id": "{{ID}}",
      "created_by": 1,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}