{
  "description": "Admin can update a group successfully",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice (Creator)",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob (Admin)",
        "phone": "+1234567891"
      }
    ],
    "groups": [
      {
        "id": 1,
        "name": "Old Name",
        "description": "Old description",
        "created_by": 1
      }
    ],
    "group_memberships": [
      {
        "id": 1,
        "group_id": 1,
        "user_id": 2,
        "role": "admin"
      }
    ]
  },
  "request": {
    "method": "PUT",
    "endpoint": "/api/v1/groups/1",
    "body": {
      "name": "Updated by Admin",
      "description": "Admin updated this"
    },
    "auth_user_id": 2
  },
  "expected": {
    "status_code": 200,
    "body_contains": [
      "Updated by Admin",
      "Admin updated this"
    ],
    "body": {
      "name": "Updated by Admin",
      "description": "Admin updated this",
      "id": "{{ID}}",
      "created_by": 1,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
