{
  "name": "Search users by contact name",
  "description": "Search users by contact name with enriched results",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "User One",
        "phone": "+1234567890",
        "username": "user_one"
      },
      {
        "id": 2,
        "name": "Test User",
        "phone": "+1234567891",
        "username": "test_user"
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/api/v1/users?search=test&enriched=true"
  },
  "expected": {
    "status_code": 200,
    "body": [
      {
        "id": "{{ID}}",
        "username": "test_user",
        "auth_provider": "phone",
        "auth_id": "{{ID}}",
        "is_public": false,
        "is_admin": false,
        "profile_picture": null,
        "contact_id": "{{ID}}",
        "contact_name": "Test User",
        "contact_phone": "+1234567891",
        "display_name": "test_user (Test User)",
        "last_login": null,
        "created_at": "{{TIMESTAMP}}",
        "updated_at": "{{TIMESTAMP}}"
      }
    ]
  }
