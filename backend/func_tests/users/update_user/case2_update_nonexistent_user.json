{
  "name": "Update non-existent user (should fail)",
  "description": "Intentar actualizar un usuario que no existe",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Test User",
        "phone": "+34600000000"
      }
    ]
  },
  "request": {
    "method": "PUT",
    "endpoint": "/api/v1/users/9999?current_user_id=1",
    "body": {
      "username": "fantasma",
      "auth_provider": "phone",
      "auth_id": "+34600000000"
    }
  },
  "expected_response": {
    "status_code": 404
  },
  "expected": {
    "status_code": 404,
    "body": {
      "detail": "User not found"
    }
  }
}
