{
  "description": "Banned user cannot get events - returns 403",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Admin",
        "phone": "+1234567891"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Alice Event",
        "start_date": "2025-12-01T18:00:00",
        "owner_id": 1
      }
    ],
    "app_bans": [
      {
        "user_id": 1,
        "banned_by": 2,
        "reason": "Spam"
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/api/v1/users/1/events"
  },
  "expected": {
    "status_code": 403,
    "body_contains": [
      "User is banned from the application"
    ],
    "body": {
      "detail": {
        "message": "User is banned from the application",
        "reason": "Spam",
        "banned_at": "{{TIMESTAMP}}"
      }
    }
  }
}
