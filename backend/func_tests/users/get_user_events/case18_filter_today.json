  "description": "Filter events for today using predefined filter",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Yesterday",
        "start_date": "2025-10-21T10:00:00",
        "owner_id": 1
      },
      {
        "id": 2,
