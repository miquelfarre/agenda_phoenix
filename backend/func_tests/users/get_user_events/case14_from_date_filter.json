{
  "description": "Filter events from a specific date onwards",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Past Event",
        "start_date": "2025-11-01T10:00:00",
        "owner_id": 1
      },
      {
        "id": 2,
        "name": "Event 1",
        "start_date": "2025-12-01T10:00:00",
        "owner_id": 1
      },
      {
        "id": 3,
        "name": "Event 2",
        "start_date": "2025-12-15T10:00:00",
        "owner_id": 1
      },
      {
        "id": 4,
        "name": "Future Event",
        "start_date": "2026-01-01T10:00:00",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/api/v1/users/1/events?from_date=2025-12-01"
  },
  "expected": {
    "status_code": 422,
    "note": "Should return events with id=2,3,4 (from 2025-12-01 onwards), NOT id=1",
    "body": {
      "detail": [
        {
          "type": "datetime_parsing",
          "loc": [
            "query",
            "from_date"
          ],
          "msg": "Input should be a valid datetime, invalid datetime separator, expected `T`, `t`, `_` or space",
          "input": "2025-12-01",
          "ctx": {
            "error": "invalid datetime separator, expected `T`, `t`, `_` or space"
          },
          "url": "https://errors.pydantic.dev/2.5/v/datetime_parsing"
        }
      ]
    }
  }
}
