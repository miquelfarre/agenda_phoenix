{
  "description": "Recurring events owned by user - hides base event, shows instances",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Weekly Meeting",
        "start_date": "2025-12-01T10:00:00",
        "event_type": "recurring",
        "owner_id": 1
      },
      {
        "id": 2,
        "name": "Weekly Meeting",
        "start_date": "2025-12-08T10:00:00",
        "event_type": "regular",
        "owner_id": 1,
        "parent_recurring_event_id": 1
      },
      {
        "id": 3,
        "name": "Weekly Meeting",
        "start_date": "2025-12-15T10:00:00",
        "event_type": "regular",
        "owner_id": 1,
        "parent_recurring_event_id": 1
      }
    ],
    "recurring_configs": [
      {
        "event_id": 1,
        "recurrence_type": "weekly",
        "schedule": [
          {
            "day": 0,
            "day_name": "Monday",
            "time": "10:00"
          }
        ]
      }
    ]
  },
  "request": {
    "method": "GET",
    "endpoint": "/users/1/events"
  },
  "expected": {
    "status_code": 200,
    "note": "Should return ONLY instances (id=2,3), NOT base event (id=1) because Alice is owner",
    "body": [
      {
        "name": "Weekly Meeting",
        "description": null,
        "start_date": "2025-12-08T10:00:00",
        "end_date": null,
        "event_type": "regular",
        "id": "{{ID}}",
        "owner_id": "{{ID}}",
        "calendar_id": null,
        "parent_recurring_event_id": null,
        "created_at": "{{TIMESTAMP}}",
        "updated_at": "{{TIMESTAMP}}",
        "interaction": null
      },
      {
        "name": "Weekly Meeting",
        "description": null,
        "start_date": "2025-12-15T10:00:00",
        "end_date": null,
        "event_type": "regular",
        "id": "{{ID}}",
        "owner_id": "{{ID}}",
        "calendar_id": null,
        "parent_recurring_event_id": null,
        "created_at": "{{TIMESTAMP}}",
        "updated_at": "{{TIMESTAMP}}",
        "interaction": null
      }
    ]
  }
}
