{
  "description": "Create interaction with banned inviter returns 403",
  "setup": {
    "users": [
      {"id": 1, "name": "Alice", "phone": "+1234567890"},
      {"id": 2, "name": "Bob", "phone": "+1234567891"},
      {"id": 3, "name": "Admin", "phone": "+1234567892"}
    ],
    "events": [
      {"id": 1, "name": "Party", "start_date": "2025-12-01T18:00:00", "owner_id": 2}
    ],
    "app_bans": [
      {"user_id": 1, "banned_by": 3, "reason": "Spam"}
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/interactions",
    "body": {
      "event_id": 1,
      "user_id": 2,
      "interaction_type": "invited",
      "invited_by_user_id": 1
    }
  },
  "expected": {
    "status_code": 403,
    "body_contains": ["User is banned from the application"]
  }
}
