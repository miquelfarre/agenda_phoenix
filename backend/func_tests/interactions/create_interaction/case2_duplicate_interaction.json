{
  "description": "Create duplicate interaction returns 400",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Party",
        "start_date": "2025-12-01T18:00:00",
        "owner_id": 1
      }
    ],
    "event_interactions": [
      {
        "event_id": 1,
        "user_id": 2,
        "interaction_type": "invited",
        "status": "pending"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/interactions",
    "body": {
      "event_id": 1,
      "user_id": 2,
      "interaction_type": "subscribed"
    }
  },
  "expected": {
    "status_code": 400,
    "body_contains": [
      "User already has an interaction with this event"
    ],
    "body": {
      "detail": "User already has an interaction with this event"
    }
  }
}
