{
  "description": "Verify that newly created interactions have is_new=true and read_at=null",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Party",
        "start_date": "2025-12-01T18:00:00",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/interactions",
    "body": {
      "event_id": 1,
      "user_id": 2,
      "interaction_type": "invited",
      "status": "pending"
    }
  },
  "expected": {
    "status_code": 201,
    "body": {
      "interaction_type": "invited",
      "status": "pending",
      "role": null,
      "note": null,
      "rejection_message": null,
      "read_at": null,
      "is_new": true,
      "id": "{{ID}}",
      "event_id": "{{ID}}",
      "user_id": "{{ID}}",
      "invited_by_user_id": null,
      "invited_via_group_id": null,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
