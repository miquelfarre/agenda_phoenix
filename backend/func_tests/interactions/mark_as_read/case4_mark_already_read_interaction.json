{
  "description": "Mark an already-read interaction as read again - should be idempotent",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Alice",
        "phone": "+1234567890"
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "events": [
      {
        "id": 1,
        "name": "Party",
        "start_date": "2025-12-01T18:00:00",
        "owner_id": 1
      }
    ],
    "event_interactions": [
      {
        "event_id": 1,
        "user_id": 2,
        "interaction_type": "invited",
        "status": "pending"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/interactions/1/mark-read",
    "note": "This test calls mark-read twice to verify idempotency. The snapshot framework doesn't support multiple requests, so this just verifies the second call succeeds."
  },
  "expected": {
    "status_code": 200,
    "body": {
      "interaction_type": "invited",
      "status": "pending",
      "role": null,
      "note": null,
      "rejection_message": null,
      "is_attending": false,
      "id": "{{ID}}",
      "event_id": "{{ID}}",
      "user_id": "{{ID}}",
      "invited_by_user_id": null,
      "invited_via_group_id": null,
      "read_at": "{{TIMESTAMP}}",
      "is_new": false,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
