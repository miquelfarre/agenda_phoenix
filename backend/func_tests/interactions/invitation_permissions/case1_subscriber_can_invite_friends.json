{
  "description": "Subscriber with accepted status can invite friends (Barcelona scenario: Juan invites Luis)",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "FC Barcelona",
        "phone": "+34900000001",
        "auth_provider": "instagram",
        "is_public": true
      },
      {
        "id": 2,
        "name": "Juan",
        "phone": "+34600000002",
        "is_public": false
      },
      {
        "id": 3,
        "name": "Luis",
        "phone": "+34600000003",
        "is_public": false
      }
    ],
    "events": [
      {
        "id": 100,
        "name": "Barcelona vs Madrid",
        "start_date": "2025-12-15T20:00:00",
        "owner_id": 1
      }
    ],
    "event_interactions": [
      {
        "event_id": 100,
        "user_id": 2,
        "interaction_type": "subscribed",
        "status": "accepted"
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/interactions",
    "body": {
      "event_id": 100,
      "user_id": 3,
      "interaction_type": "invited",
      "status": "pending",
      "invited_by_user_id": 2
    }
  },
  "expected": {
    "status_code": 201,
    "note": "Juan (subscriber with accepted status) can invite Luis to the event",
    "body": {
      "interaction_type": "invited",
      "status": "pending",
      "role": null,
      "note": null,
      "rejection_message": null,
      "is_attending": false,
      "id": "{{ID}}",
      "event_id": "{{ID}}",
      "user_id": "{{ID}}",
      "invited_by_user_id": "{{ID}}",
      "invited_via_group_id": null,
      "read_at": null,
      "is_new": true,
      "created_at": "{{TIMESTAMP}}",
      "updated_at": "{{TIMESTAMP}}"
    }
  }
}
