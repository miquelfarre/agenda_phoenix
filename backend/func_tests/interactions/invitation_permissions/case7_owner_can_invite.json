{
  "description": "Public user (even if owner) cannot invite",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "FC Barcelona",
        "phone": "+34900000001",
        "auth_provider": "instagram",
        "is_public": true
      },
      {
        "id": 2,
        "name": "Juan",
        "phone": "+34600000002",
        "is_public": false
      }
    ],
    "events": [
      {
        "id": 100,
        "name": "Barcelona vs Madrid",
        "start_date": "2025-12-15T20:00:00",
        "owner_id": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/interactions",
    "body": {
      "event_id": 100,
      "user_id": 2,
      "interaction_type": "invited",
      "status": "pending",
      "invited_by_user_id": 1
    }
  },
  "expected": {
    "status_code": 403,
    "body_contains": [
      "Public users cannot invite"
    ],
    "body": {
      "detail": "Public users cannot invite others to events. Only private users can invite."
    }
  }
}
