{
  "description": "Create membership with nonexistent user returns 404",
  "setup": {
    "users": [
      {"id": 1, "name": "Alice", "phone": "+1234567890"}
    ],
    "groups": [
      {"id": 1, "name": "Team A", "created_by": 1}
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/group_memberships",
    "body": {
