{
  "description": "Create duplicate app ban returns 400",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Admin",
        "phone": "+1234567890",
        "is_admin": true
      },
      {
        "id": 2,
        "name": "Bob",
        "phone": "+1234567891"
      }
    ],
    "app_bans": [
      {
        "user_id": 2,
        "banned_by": 1
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/app_bans?current_user_id=1",
    "body": {
      "user_id": 2,
      "banned_by": 1,
      "reason": "Duplicate ban"
    }
  },
  "expected": {
    "status_code": 400,
    "body_contains": [
      "User is already banned from the application"
    ],
    "body": {
      "detail": "User is already banned from the application"
    }
  }
}
