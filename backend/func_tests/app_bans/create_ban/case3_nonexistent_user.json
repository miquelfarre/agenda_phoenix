{
  "description": "Create app ban with nonexistent user returns 404",
  "setup": {
    "users": [
      {
        "id": 1,
        "name": "Admin",
        "phone": "+1234567890",
        "is_admin": true
      }
    ]
  },
  "request": {
    "method": "POST",
    "endpoint": "/api/v1/app_bans?current_user_id=1",
    "body": {
      "user_id": 999,
      "banned_by": 1
    }
  },
  "expected": {
    "status_code": 404,
    "body_contains": [
      "User not found"
    ],
    "body": {
      "detail": "User not found"
    }
  }
}
